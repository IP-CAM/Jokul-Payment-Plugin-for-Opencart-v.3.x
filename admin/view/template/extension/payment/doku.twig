{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="pull-right">
				<button type="submit" form="form-doku-onecheckout" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
					<i class="fa fa-save"></i>
				</button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
					<i class="fa fa-reply"></i>
				</a>
			</div>
			<h1>{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li>
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger">
				<i class="fa fa-exclamation-circle"></i>
				{{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-doku" class="form-horizontal">
			<input type="hidden" name="payment_doku_companyid" value="2">


			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">
						<i class="fa fa-pencil"></i>
						{{ server_params }}</h3>
				</div>
				<div class="panel-body">

					<div class="form-group required">
						<label class="col-sm-2 control-label" for="payment_doku_status">{{ entry_status }}</label>
						<div class="col-sm-10">
							<select name="payment_doku_status" id="payment_doku_status" class="form-control">
								{% if payment_doku_status %}
									<option value="1" selected="selected">{{ text_enabled }}</option>
									<option value="0">{{ text_disabled }}</option>
								{% else %}
									<option value="1">{{ text_enabled }}</option>
									<option value="0" selected="selected">{{ text_disabled }}</option>
								{% endif %}
							</select>
						</div>
					</div>

					<div class="form-group required">
						<label class="col-sm-2 control-label" for="payment_doku_server_set">Choose Server Destination</label>
						<div class="col-sm-10">
							<select name="payment_doku_server_set" id="payment_doku_server_set" class="form-control">
								{% if payment_doku_server_set %}
									<option value="1" selected="selected">Production</option>
									<option value="0">Development</option>
								{% else %}
									<option value="1">Production</option>
									<option value="0" selected="selected">Development</option>
								{% endif %}
							</select>
						</div>
					</div>
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="">{{ entry_mallid }}</label>
						<div class="col-sm-10">
							<input type="text" name="payment_doku_mallid" id="payment_doku_mallid" value="{{ payment_doku_mallid=='' ? '99999999' : payment_doku_mallid }}" placeholder="Input your Mall ID here" class="form-control"/>
							{% if error_mallid %}
								<div class="text-danger">{{ error_mallid }}</div>
							{% endif %}
						</div>
					</div>
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="">{{ entry_shared }}</label>
						<div class="col-sm-10">
							<input type="text" name="payment_doku_shared" id="payment_doku_shared" value="{{ payment_doku_shared=='' ? '99999999' : payment_doku_shared }}" placeholder="Input your Sharedkey here" class="form-control"/>
							{% if error_shared %}
								<div class="text-danger">{{ error_shared }}</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">
						<i class="fa fa-pencil"></i>
						{{ url_title }}</h3>
				</div>
				<div class="panel-body">
					<div class="form-group required">
						<label class="col-sm-2 control-label" for="input-sort-order">Notify</label>
						<div class="col-sm-10">
							<input type="text" value="{{ url_notify }}" class="form-control" readonly="readonly"/>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</div>
{{ footer }}
